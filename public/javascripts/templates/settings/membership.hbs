<div class="settings-content">
  <div class="settings-header clearfix">
    <small>{{#linkTo 'settings.memberships' classNames="pull-right"}}&laquo; Back to Organizations{{/linkTo}}</small>
    <h4>{{organization.name}}</h4>
  </div>
    
  {{#if is_admin}}
    <form {{action "addMember" organization on="submit"}}>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Admin?</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="2">{{input type="text" value=newEmail placeholder="Email Address" classNames="input-xlarge"}}</td>
            <td>{{view App.ToggleSwitchView checkedBinding="newIsAdmin"}}</td>
            <td><button type="submit" class="btn btn-small pull-right"><i class="icon-plus"></i></button></td>
          </tr>
          {{#each membership in organization.memberships}}
            <tr>
              <td>{{membership.user.name}}</td>
              <td>{{membership.user.email}}</td>
              <td>{{view App.ToggleSwitchView checkedBinding=membership.is_admin}}</td>
              <td>
                <button class="btn btn-small pull-right" {{action 'removeMembership' membership}}><i class="icon-trash"></i></button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </form>
  {{/if}}
</div>